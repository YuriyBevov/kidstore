include ../../mixins/main-btn
include ../../content/index-page/hero

section.intro
  h1.visually-hidden Главный заголовок сайта!

  .swiper.intro-swiper
    .swiper-wrapper
      each slide in heroSliderContent
        .swiper-slide
          .swiper-slide-container(style='background-image: url(' + slide.img + ')')
            .intro-swiper__wrapper
              .intro-swiper__container
                h2!=slide.title
                +main-btn('link', slide.btnText, slide.url)

    .intro-swiper-pagination.swiper-pagination
