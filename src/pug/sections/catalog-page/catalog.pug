section.catalog
  .container.catalog__container
    .catalog__sidebar
      h1 Каталог

      include ../../components/catalog-filter

    .catalog__main
      .catalog__main-header
        span.catalog__main-header-text Сортировка:

        select(id="catalog-sort").custom-select
          option(value="PRICE_UP" selected) По возрастанию цены
          option(value="PRICE_DOWN") По уменьшению цены
          option(value="POPULAR") По популярности
          option(value="NEWEST") По новизне

      .catalog__main-body
        include ../../components/catalog-list

      .catalog__main-footer
        include ../../components/pagination
